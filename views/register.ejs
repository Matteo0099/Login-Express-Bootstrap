<html>

<head>
  <title>Register</title>
  <link type="text/css" href="../assets/main.css">
  <style>
    @import url('https://cssreset.tk/css-reset-v2/resetV2.css');
    @import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css');

    html,
    body {
      font: system-ui, sans-serif;
    }

    main {
      width: 100%;
      height: 100vh;
      max-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    button {
      border: 1px solid #999;
      padding: 1rem 2rem;
      margin: 1rem auto;
      border-radius: 8px;
      width: 100%;
      height: 50px;
    }
  </style>
</head>

<body>
  <main>
    <h1>Register</h1>

    <!-- form -->

    <form action="/register" method="POST" style="width: 23rem;">
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required class="form-control">
      </div>

      <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" required autocomplete="email">
      </div>

      <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" required>
      </div>

      <button type="submit" role="button" class="btn btn-primary">Register</button>
    </form>

    <p>Have already an account?
      <a href="/login" class="link-info">Login here</a>
    </p>
  </main>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
</body>

</html>