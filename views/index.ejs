<html>

<head>
  <title>
    Bentornato <%= name %>
  </title>

  <link type="text/css" href="../assets/main.css">
  <style>
    @import url('https://cssreset.tk/css-reset-v2/resetV2.css');
    @import url('https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css');

    html,
    body {
      font: system-ui, sans-serif !important;
    }

    main {
      width: 100%;
      height: 100vh;
      max-height: 100vh;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-direction: column;
    }

    button {
      border: 1px solid #999;
      padding: .5rem 1rem;
      margin: 0 auto;
      border-radius: 8px;
    }

    form {
      appearance: none;
      -webkit-appearance: none;
      margin: 2rem auto;
    }

    .title {
      font-size: clamp(24px, 4vw, 40px);
      font-weight: bold;
      margin: 0 0 1rem;
    }

    .subtitle {
      font-size: clamp(18px, 4vw, 22px);
      font-weight: 500;
      margin: 1rem 0;
    }

    aside {
      padding-top: 2rem;
      width: 25%;
      min-width: 105px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      left: 0;
      float: left;
      margin-right: auto;
      height: 100vh;
      position: fixed;
      color: #000;
      border-right: 1px solid #999;
      background: rgba(0, 0, 0, 0.05);
    }

    aside>.title,
    aside>.subtitle {
      margin: auto;
      width: 100%;
    }

    .right-container {
      min-height: 100vh;
      width: 75%;
      right: 0;
      position: fixed;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .container-md {
      width: 100%;
      height: 100vh;
      padding: 0 .5rem;
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
    }
  </style>
</head>

<body>
  <main>
    <aside class="aside navbar">
      <div class="container-md">
        <h2 class="subtitle">Dashboard</h2>
        <form action="/logout?_method=DELETE" method="POST">
          <button 
            type="submit" 
            class="btn btn-danger">Log Out</button>
        </form>
      </div>
    </aside>
    <div class="right-container">
      <h1 class="title">Hi <%= name %>
      </h1>
    </div>
  </main>
</body>

</html>